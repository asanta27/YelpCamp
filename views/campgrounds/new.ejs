<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create New Campground!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Yosemite National Park</label>
                    <input class="form-control" type="text" placeholder="name" name="name" id = "name" required>
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" type="text" placeholder="https://i.imgur.com/Rdk7OMg.jpg" name="image" id = "image" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" placeholder="Tall trees and fresh air..." name="description" id = "description" required>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" placeholder="5" name="price" id = "price" min="1.00" step="1.00" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="locationTextField" placeholder="Yosemite National Park, CA" required>
                </div>
               <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">View Campgrounds</a>
        </div>

    </div>
</div>

<!--autocomplete location box-->
<script>
    function init() {
        var input = document.getElementById('locationTextField');
        var autocomplete = new google.maps.places.Autocomplete(input);
    }
    google.maps.event.addDomListener(window, 'load', init);
</script>

